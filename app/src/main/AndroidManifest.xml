<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- <uses-permission android:name="android.permission.RECORD_AUDIO" /> crash removal test-->
    
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/damageforgelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/damageforgelogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DamageForge"
        tools:targetApi="31">
        <activity
            android:name=".CompareActivity"
            android:exported="false"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PuzzleActivity"
            android:exported="false"
            />
    </application>

</manifest>